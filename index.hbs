{{!< default}}

<div id="latest-post" class="container">
    {{#foreach posts}}
        {{#if feature_image}}
        <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">
          <img class="post-featured-image" src="{{img_url feature_image}}">
        </a>
        {{/if}}
    {{/foreach}}
</div>

<div id="post-index" class="container">
    <ol class="post-list">
        {{> loop}}
    </ol>

    <div class="post-navigation">
        {{pagination}}
    </div>
</div>
